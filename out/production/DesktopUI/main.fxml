<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="510.0"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="appController">
    <center>
        <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity"/>
                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity"/>
                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" text="load graph"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="0" GridPane.valignment="TOP" onAction="#loadGraph"/>
                <Button mnemonicParsing="false" text="run Task"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="0" GridPane.valignment="TOP" onAction="#runTask"/>
                <Button mnemonicParsing="false" text="show graph"
                        GridPane.columnIndex="2"
                        GridPane.rowIndex="0" GridPane.valignment="TOP" onAction="#showGraph"/>
                <Button mnemonicParsing="false" text="stop tasks"
                        GridPane.columnIndex="3"
                        GridPane.rowIndex="0" GridPane.valignment="TOP" onAction="#toggleTask"/>

            </children>
        </GridPane>
    </center>
</BorderPane>
